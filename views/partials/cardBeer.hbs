<div class='cartBeer'>
        <img src='{{this.image_url}}' />
        <h2><a href="/beers/{{this.id}}">{{this.name}}</a></h2>
        <p>{{this.description}}</p>
        <span>#{{this.tagline}}</span>
        {{#if this.random}}
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{this.brewers_tips}}</p>

        {{/if}}
</div>